<div class="container mt-4">
    <div class="card shadow-sm mb-4">
        <div class="card-body text-center py-4 rounded" style="background: linear-gradient(135deg, #2F855A, #38B2AC);">
            <h1 class="display-5 mb-2 text-white">
                <%= @challenge.persisted? ? "✏️ Edit Challenge" : "➕ New Challenge" %>
            </h1>
            <p class="lead mb-0 text-white">Fill in the details below</p>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            <%= form_with model: @challenge do |c| %>
                <% if @challenge.errors.any? %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <h5 class="alert-heading"><strong>⚠️ There were errors with your submission:</strong></h5>
                        <ul class="mb-0">
                            <% @challenge.errors.full_messages.each do |msg| %>
                                <li><%= msg %></li>
                            <% end %>
                        </ul>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% end %>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <%= c.label :name, "Title", class: "form-label" %>
                        <%= c.text_field :name, placeholder: "Title of the Challenge", class: "form-control" %>
                    </div>

                    <div class="col-md-6 mb-3">
                        <%= c.label :scoring_rule_id, "Scoring Rule", class: "form-label" %>
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1 me-2">    
                                <%= c.collection_select :scoring_rule_id, 
                                    (@scoring_rules || ScoringRule.all), 
                                    :id, :rule_type, 
                                    {include_blank: "Select a scoring rule" }, 
                                    {class: "form-select", id: "challenge_scoring_rule_select" } %>
                            </div>
                            <div>
                                <%= link_to "➕ New", new_scoring_rule_path(return_to: request.fullpath),
                                    id: "new-scoring-rule-link",
                                    class: "btn btn-outline-secondary" %>
                            </div>
                        </div>
                        <% if @challenge.errors[:scoring_rule_id].any? %>
                            <div class="text-danger small mt-1"><%= @challenge.errors[:scoring_rule_id].first %></div>
                        <% end %>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <%= c.label :start_date, "Start Date:", class: "form-label" %>
                        <%= c.date_select :start_date, class: "form-control" %>
                    </div>

                    <div class="col-md-6 mb-3">
                        <%= c.label :end_date, "End Date:", class: "form-label" %>
                        <%= c.date_select :end_date, class: "form-control" %>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 mb-3">
                        <%= c.label :description, "Description", class: "form-label" %>
                        <%= c.rich_text_area :description, class: "form-control" %>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <%= c.label :visibility, "Visibility", class: "form-label" %>
                        <%= c.select :visibility, ["Public", "Private"], {}, placeholder: "Visibility", class: "form-select" %>
                    </div>

                    <div class="col-md-6 mb-3">
                        <%= c.label :category, "Category", class: "form-label" %>
                        <%= c.select :category, ["Category 1", "Category 2"], {}, class: "form-select" %>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                    <% cancel_path = @challenge.persisted? ? challenge_path(@challenge) : challenges_path %>
                    <%= link_to "Cancel", cancel_path, class: "btn btn-danger px-4" %>
                    <%= c.submit "Save", class: "btn btn-primary px-5" %>
                </div>
            <% end %>
        </div>
    </div>
</div>