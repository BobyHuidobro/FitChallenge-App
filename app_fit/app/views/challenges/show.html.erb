<div class="container mt-5">
    <div class="card p-3" >
        <div class="d-flex justify-content-between align-items-center mb-3">
            <%= link_to "← Back to Challenges", challenges_path, class: "btn btn-secondary" %>
            <div class="d-flex gap-2">
                <% if can?(:edit, @challenge) %>
                    <%= link_to "✏️", edit_challenge_path(@challenge),
                        class: "btn btn-primary" %>
                <% end %>
                <% if can?(:destroy, @challenge) %>
                    <%= link_to "🗑️", challenge_path(@challenge),
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this challenge?" },
                        class: "btn btn-danger" %>
                <% end %>
            </div>
        </div>
    </div>
    
    <div class="card mx-auto" style="max-width: 1500px">
        <div class="card-body text-center">
            <h1><%= @challenge.name %></h1>
        </div>
        <div class="card-body">
            <p>Start date: <%= @challenge.start_date %></p>
            <p>End date: <%= @challenge.end_date %></p>
            <p>Created by: <%= @challenge.user&.username || "Unknown" %></p>
        </div>
        <div class="card-body">
            <h2>Description</h2>
            <% if @challenge.description.present? %>
                <p><%= @challenge.description %></p>
            <% else %>
                <p>No description available.</p>
            <% end %>
        </div>
        <div class="card-body">
            <h2 class="mb-3" style="color: #2F855A;">Scoring Rules</h2>
            <% if @challenge.scoring_rule.present? %>
                <div class="card" style="border-left: 4px solid #38B2AC; background-color: #F7FAFC;">
                    <div class="card-body">
                        <h4 class="mb-3">
                            <%= link_to @challenge.scoring_rule.rule_type, scoring_rule_path(@challenge.scoring_rule), 
                                class: "text-decoration-none", 
                                style: "color: #2C7A7B; font-weight: 600;" %>
                        </h4>
                        <p class="mb-0" style="color: #4A5568; line-height: 1.6;">
                            <%= @challenge.scoring_rule.description %>
                        </p>
                    </div>
                </div>
            <% else %>
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No scoring rule assigned.
                </div>
            <% end %>
        </div>
        <div class="card-body">
            <p>Visibility: <%= @challenge.visibility %></p>
        </div>
    </div>

    <%# Leaderboard Section %>
    <div class="mt-4">
        <%= render 'leaderboard' %>
    </div>
</div>


