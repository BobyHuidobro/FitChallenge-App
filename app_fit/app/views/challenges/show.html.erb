<div class="container mt-5">
    <div class="card p-3" >
        <div class="d-flex justify-content-between align-items-center mb-3">
            <%= link_to "â† Back to Challenges", challenges_path, class: "btn btn-secondary" %>
            <div class="d-flex gap-2">
                <% if can?(:edit, @challenge) %>
                    <%= link_to "âœï¸", edit_challenge_path(@challenge),
                        class: "btn btn-primary" %>
                <% end %>
                <% if can?(:destroy, @challenge) && @challenge.participations.none? %>
                    <%= link_to "ðŸ—‘ï¸", challenge_path(@challenge),
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this challenge?" },
                        class: "btn btn-danger" %>
                <% end %>
            </div>
        </div>
    </div>
    
    <div class="card mx-auto" style="max-width: 1500px">
        <div class="card-body text-center">
            <h1><%= @challenge.name %></h1>
        </div>
        <div class="card-body">
            <p>Start date: <%= @challenge.start_date %></p>
            <p>End date: <%= @challenge.end_date %></p>
            <p>Created by: <%= @challenge.user&.username || "Unknown" %></p>
        </div>
        <div class="card-body">
            <h2>Description</h2>
            <% if @challenge.description.present? %>
                <p><%= @challenge.description %></p>
            <% else %>
                <p>No description available.</p>
            <% end %>
        </div>
        <div class="card-body">
            <h2 class="mb-3" style="color: #2F855A;">Scoring Rules</h2>
            <% if @challenge.scoring_rule.present? %>
                <div class="card" style="border-left: 4px solid #38B2AC; background-color: #F7FAFC;">
                    <div class="card-body">
                        <h4 class="mb-3">
                            <%= link_to @challenge.scoring_rule.rule_type, scoring_rule_path(@challenge.scoring_rule), 
                                class: "text-decoration-none", 
                                style: "color: #2C7A7B; font-weight: 600;" %>
                        </h4>
                        <p class="mb-0" style="color: #4A5568; line-height: 1.6;">
                            <%= @challenge.scoring_rule.description %>
                        </p>
                    </div>
                </div>
            <% else %>
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No scoring rule assigned.
                </div>
            <% end %>
        </div>
        <div class="card-body">
            <p>Visibility: <%= @challenge.visibility %></p>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-end align-items-center mb-3">
                <div class="d-flex gap-2">
                    <% if user_signed_in? %>
                        <% if @challenge.participants.exists?(current_user.id) %>
                            <%= button_to "Leave Challenge", challenge_participation_path(@challenge, current_user.participations.find_by(challenge: @challenge)), method: :delete, class: "btn btn-outline-danger", data: { turbo_confirm: "Are you sure?" }, form: { class: "d-inline" } %>
                            <%= link_to "Add Progress", new_challenge_progress_entry_path(@challenge), class: "btn btn-success" %>
                        <% else %>
                            <%= button_to "Join Challenge", challenge_participations_path(@challenge), method: :post, class: "btn btn-primary", form: { class: "d-inline" } %>
                        <% end %>
                    <% end %>
                </div>
            </div> 

            <% if user_signed_in? && @challenge.participants.exists?(current_user.id) %>
                <div class="card-body">
                    <h3>Your Recent Progress</h3>
                    <% user_entries = @challenge.progress_entries.where(user: current_user).order(entry_date: :desc).limit(5) %>
                    <% if user_entries.any? %>
                        <ul class="list-group">
                            <% user_entries.each do |e| %>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong><%= e.entry_date %></strong>
                                        <span class="text-muted ms-2">Qty: <%= e.quantity %></span>
                                        <span class="text-muted ms-2">Points: <%= e.points_awarded %></span>
                                    </div>
                                </li>
                            <% end %>
                        </ul>
                    <% else %>
                        <div class="alert alert-info mt-2">No progress recorded yet.</div>
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>

    <%# Leaderboard Section %>
    <div class="mt-4">
        <%= render 'leaderboard' %>
    </div>
</div>


