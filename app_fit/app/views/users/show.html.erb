<div class="container mt-4">
    <div class="card shadow-sm mb-4">
        <div class="card-body text-center py-4 rounded" style="background: linear-gradient(135deg, #2F855A, #38B2AC);">
            <h1 class="display-4 mb-2 text-white">¬°Hi, <%= @user.username %>!</h1>
            <p class="lead mb-0 text-white">Welcome back!</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header text-white" style="background-color: #2F855A;">
                    <h5 class="mb-0">üìä Participations</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <% @user.participations.each do |participation| %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><strong><%= participation.challenge.name %></strong></span>
                            <span class="badge rounded-pill" style="background-color: #38B2AC;"><%= participation.total_points %> pts</span>
                        </li> 
                    <% end %>
                </ul>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header text-white" style="background-color: #2C7A7B;">
                    <h5 class="mb-0">üìà Progress</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <% @user.progress_entries.each do |progress| %>
                        <li class="list-group-item">
                            <small class="text-muted"><%= progress.entry_date %></small>
                            <br>
                            <strong><%= progress.challenge.name %></strong>
                            <span class="badge bg-warning text-dark ms-2"><%= progress.points_awarded %> pts</span>
                        </li> 
                    <% end %>
                </ul>
            </div>
        </div>

        <div class="col-lg-4 col-md-12 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">üèÜ Badges</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <% @user.user_badges.each do |badge| %>
                        <li class="list-group-item">
                            <strong><%= badge.badge.name %></strong>
                            <br>
                            <small class="text-muted">Obtenida: <%= badge.awarded_at.strftime("%d/%m/%Y") %></small>
                        </li> 
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
</div>