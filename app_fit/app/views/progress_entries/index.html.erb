<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Your Progress</h2>
    <%= link_to "Add Progress", new_challenge_progress_entry_path(@challenge), class: "btn btn-success" %>
  </div>

  <% if @entries.any? %>
    <div class="list-group">
      <% @entries.each do |e| %>
        <div class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= e.entry_date %></strong>
            <span class="text-muted ms-2">Qty: <%= e.quantity %></span>
            <span class="text-muted ms-2">Points: <%= e.challenge.scoring_rule.pts_quantity(e.quantity) %></span>
          </div>
          <span class="badge bg-primary rounded-pill"><%= e.created_at.strftime('%H:%M') %></span>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">You haven't recorded any progress yet.</div>
  <% end %>
  <div class="mt-3">
    <%= link_to "Back to Challenge", challenge_path(@challenge), class: "btn btn-outline-secondary" %>
  </div>
</div>
