<nav class="navbar navbar-expand-lg">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png", alt: "FitChallenge", style: "height: 40px;" %>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link #{current_page?(root_path) ? 'active' : ''}" %>
        </li>
        <li class="nav-item">
          <%= link_to "New Challenge", new_challenge_path, class: "nav-link #{current_page?(new_challenge_path) ? 'active' : ''}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Scoring Rules", scoring_rules_path, class: "nav-link #{current_page?(scoring_rules_path) ? 'active' : ''}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Badges", badges_path, class: "nav-link #{current_page?(badges_path) ? 'active' : ''}" %>
          </li>
      </ul>
